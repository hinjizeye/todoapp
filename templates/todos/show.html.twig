{% extends 'base.html.twig' %}

{% block title %}Todos{% endblock %}

{% block body %}
    <h1>My Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ todo.date ? todo.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Completiondate</th>
                <td>{{ todo.completiondate ? todo.completiondate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ todo.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_todos_index') }}">back to list</a>

    <a href="{{ path('app_todos_edit', {'id': todo.id}) }}" class="btn btn-warning">Edit My Todo</a>

    {{ include('todos/_delete_form.html.twig') }}
{% endblock %}
